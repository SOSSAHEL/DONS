{% extends "DonateAdminBundle::layout.html.twig" %}

{% block main_content %}
<h2>Authentification</h2>
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}

<form action="{{ path('donate_admin_login_check') }}" method="post" role="form">
    <div class="form-group">
        <label for="username" >Username</label>
        <input type="text" class="form-control"  placeholder="login" id="username" name="_username" value="{{ last_username }}" />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="_password" class="form-control"  placeholder="mot de passe"  />
    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
    <input type="hidden" name="_target_path" value="/secured" />

    {# @see http://symfony.com/doc/current/cookbook/security/remember_me.html
    #}
    <div class="checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">Garder ma session active</label>
    </div>

    <button type="submit" class="btn btn-default" >login</button>
</form>
{% endblock %}

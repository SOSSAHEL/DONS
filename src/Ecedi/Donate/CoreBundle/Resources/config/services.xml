<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="donate_core.payment_method_discovery.class">Ecedi\Donate\CoreBundle\PaymentMethod\Discovery</parameter>
        <parameter key="donate_core.equivalence.factory.class">Ecedi\Donate\CoreBundle\Equivalence\EquivalenceFactory</parameter>
        <parameter key="donate_core.equivalence"/>
        <parameter key="donate_core.intent_manager.class">Ecedi\Donate\CoreBundle\IntentManager\DefaultIntentManager</parameter>
        <parameter key="donate_core.campaign_tracker.listener.class">Ecedi\Donate\CoreBundle\EventListener\CampaignTrackerListener</parameter>
        <parameter key="donate_core.analytics.cookieparser.class">Ecedi\Donate\CoreBundle\Analytics\GoogleCookieParser</parameter>
        <parameter key="donate_core.mail.donator"/>
        <parameter key="donate_core.mail.webmaster"/>
        <parameter key="donate_core.mail.noreply"/>
        <parameter key="donate_core.payment_methods"/> <!-- List of enabled payment methodes (!= available Payment methodes) -->
        <parameter key="donate_core.layout.manager.class">Ecedi\Donate\CoreBundle\Layout\LayoutManager</parameter>

    </parameters>

    <services>

        <service id="donate_core.base_payment_method" abstract="true">
            <call method="setTemplating">
                <argument type="service" id="templating" />
            </call>
            <call method="setDoctrine">
                <argument type="service" id="doctrine" />
            </call>
            <call method="setRouter">
                <argument type="service" id="router" />
            </call>
        </service>

        <service id="donate_core.analytics.cookieparser" class="%donate_core.analytics.cookieparser.class%">
        </service>

        <service id="donate_core.payment_method_discovery" class="%donate_core.payment_method_discovery.class%">
            <argument type="service" id="translator" />
            <argument>%donate_core.payment_methods%</argument>
        </service>
        <service id="donate_core.equivalence.factory" class="%donate_core.equivalence.factory.class%">
            <argument>%donate_core.equivalence%</argument>
        </service>

        <service id="donate_core.intent_manager" class="%donate_core.intent_manager.class%">
            <argument type="service" id="service_container" />
        </service>

        <service id="donate_core.layout.manager" class="%donate_core.layout.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <!-- donate_core.campaign_tracker.listener Ã©coute la creation de nouveau intents pour binder le tracker de campagne -->
        <service id="donate_core.campaign_tracker.listener" class="%donate_core.campaign_tracker.listener.class%">
            <argument>%donate_front.campaign%</argument>
             <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="kernel.event_subscriber" />
        </service>

    </services>
</container>

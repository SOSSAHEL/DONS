<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="donate_front.google_analytics" />
        <parameter key="donate_front.form.civility" />
        <parameter key="donate_front.i18n" />
        <parameter key="donate_front.campaign" />
        <parameter key="form.type.donation.class">Ecedi\Donate\FrontBundle\Form\Type\DonationType</parameter>
        <parameter key="donate_front.thanks_email.listener.class">Ecedi\Donate\FrontBundle\EventListener\ThanksEmailEventListener</parameter>
    </parameters>

    <services>
        <service id="form.type.donate" class="%form.type.donation.class%">
            <argument type="service" id="translator" />
            <tag name="form.type" alias="donate" />
        </service>

        <service id="donate_front.form.type.amount_type" class="Ecedi\Donate\FrontBundle\Form\Type\AmountType">
            <argument type="service" id="translator" />
            <tag name="form.type" alias="amount_selector" />
        </service>

        <service id="donate_front.i18n.twig" class="Ecedi\Donate\FrontBundle\Twig\I18nTwigExtension">
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>

        <service id="donate_front.layout.twig" class="Ecedi\Donate\FrontBundle\Twig\Extension\LayoutExtension">
            <argument type="service" id="donate_core.layout.manager" />
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>

        <service id="donate_front.form_listener" class="Ecedi\Donate\FrontBundle\Listener\FormListener">
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="donate_front.thanks_email.listener" class="%donate_front.thanks_email.listener.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="mailer" />
            <argument type="service" id="translator" />
            <argument>%donate_core.mail.noreply%</argument>
            <tag name="kernel.event_subscriber" />
        </service>

    </services>

</container>
